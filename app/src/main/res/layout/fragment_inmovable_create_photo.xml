<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/inm_create_photo_lyt_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    tools:context=".features.inmovable.create.InmovableCreatePhotoFragment">

    <LinearLayout
        android:id="@+id/inm_create_photo_lyt_buttons"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:orientation="horizontal">

        <Button
            android:id="@+id/inm_create_photo_btn_take"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/inm_create_photo_btn_take" />

        <Button
            android:id="@+id/inm_create_photo_btn_delete"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/inm_create_photo_btn_delete" />
    </LinearLayout>

    <ImageView
        android:id="@+id/inm_create_photo_img"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

</LinearLayout>